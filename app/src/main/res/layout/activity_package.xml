<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_package"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="egypt.sedrak.insta1.PackageActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.widget.Spinner
            android:id="@+id/package_categorie_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:fontFamily="sans-serif"
            />



        <android.support.design.widget.TextInputLayout
            android:theme="@style/Theme.AppCompat"
            android:id="@+id/price_layout"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/package_price"
                android:hint=" Package Price"
                android:ems="10"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:fontFamily="sans-serif"
                android:layout_below="@+id/category_spinner"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:theme="@style/Theme.AppCompat"
            android:id="@+id/No_photographers_Layout"
            android:layout_width="match_parent"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/package_no_photographer"
                android:hint="Number of Photographers"
                android:ems="10"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:fontFamily="sans-serif"
                android:layout_below="@+id/price_package"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:theme="@style/Theme.AppCompat"
            android:id="@+id/No_hours_layout"
            android:layout_width="match_parent"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/package_duration"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark"
                android:hint=" Duration by Hour"
                android:fontFamily="sans-serif"
                android:layout_below="@+id/No_photographer"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:theme="@style/Theme.AppCompat"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:textColorHint="@color/colorPrimaryDark"
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:id="@+id/package_extraDescription"
                android:ems="10"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:hint="Extra Description"
                android:fontFamily="sans-serif"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/Transportation_spinner"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/package_add"
            />


    </LinearLayout>

</RelativeLayout>
